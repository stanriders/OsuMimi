<UserControl x:Class="OsuMimi.Controls.MimiTrackbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OsuMimi"
             mc:Ignorable="d" 
             d:DesignHeight="10" d:DesignWidth="300">
    <Grid x:Name="layoutGrid" Cursor="Hand" MouseMove="layoutGrid_MouseMove" MouseLeftButtonDown="layoutGrid_MouseLeftButtonDown">
        <Rectangle x:Name="backgroundRectangle" Fill="#33FFFFFF" />
        <Rectangle x:Name="progressRectangle" Fill="#7FFFFFFF" Width="50" HorizontalAlignment="Left" />
    </Grid>
</UserControl>
